<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.shichi18.outputtext.MainActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linearlayout" android:padding="10dp">
            <TextView
                    android:text="@string/licence_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text1"/>
            <TextView
                    android:text="@string/text_output_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/output_text"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
